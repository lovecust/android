<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/titlebar">

	<ImageView
		android:id="@+id/titleBarOptionLeft"
		style="@style/title_bar_options_icon"
		android:src="@drawable/icon_back_selector"/>

	<TextView
		android:id="@+id/titleBarTitle"
		style="@style/title_bar_options_text"
		android:layout_toRightOf="@id/titleBarOptionLeft"
		android:text="@string/title"/>

	<ImageView
		android:id="@+id/titleBarOptionRight"
		style="@style/title_bar_options_icon"
		android:layout_alignParentRight="true"
		android:padding="9dp"
		android:src="@mipmap/icon_share_black"/>

</RelativeLayout>