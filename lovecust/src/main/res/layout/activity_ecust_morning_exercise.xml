<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/layout_parent">

	<include
		layout="@layout/title_bar_subpage"/>

	<EditText
		android:id="@+id/et_cid"
		style="@style/edittext"
		android:hint="@string/hint_ecust_morning_cid"
		android:background="@drawable/bg_white_round_corner"/>

	<TextView
		style="@style/decoration_line"/>

	<EditText
		android:id="@+id/et_pwd"
		style="@style/edittext"
		android:inputType="textPassword"
		android:hint="@string/hint_ecust_morning_pwd"
		android:background="@drawable/bg_white_round_corner"/>

	<TextView
		android:id="@+id/btnCommit"
		style="@style/button_long"
		android:text="Query"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/tv_score"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:gravity="center"
			android:text="20"
			android:textSize="140sp"/>

	</RelativeLayout>

</LinearLayout>