<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/layout_parent">

	<include
		layout="@layout/title_bar_subpage"/>

	<TextView
		style="@style/decoration_line"/>

	<LinearLayout
		android:id="@+id/layoutPanelBuildings"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">


	</LinearLayout>

	<TextView
		style="@style/decoration_line"/>

	<LinearLayout
		android:id="@+id/layoutPanelCourses"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">


	</LinearLayout>

	<TextView
		style="@style/decoration_line"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/text"
			style="@style/text_multiline"/>

		<LinearLayout
			style="@style/layout_horizontal"
			android:layout_marginBottom="5dp"
			android:gravity="right">

			<TextView
				style="@style/text"
				android:background="#00F"
				android:text="@string/ecust_classroom_available"
				android:textColor="#FFF"/>

			<TextView
				style="@style/text"
				android:background="#AAA"
				android:text="@string/ecust_classroom_occupied"
				android:textColor="#FFF"/>
		</LinearLayout>
	</LinearLayout>

	<TextView
		style="@style/decoration_line"/>

	<LinearLayout
		android:id="@+id/layoutClassroomHolder"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			style="@style/text_hint_multiline"
			android:autoLink="web"
			android:textColorLink="@color/app_darker"
			android:minHeight="180dp"
			android:textIsSelectable="true"
			android:text="@string/hint_ecust_classroom_explain"/>

	</LinearLayout>

	<TextView
		style="@style/text_hint_multiline"
		android:text="@string/hint_ecust_classroom_explain_mistakes"/>


</LinearLayout>