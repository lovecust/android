<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!--<style name="AppTheme" parent="android:Theme.Material" tools:ignore="NewApi">-->
	<!--&lt;!&ndash; theme customizations &ndash;&gt;-->
	<!--&lt;!&ndash; Main theme colors &ndash;&gt;-->
	<!--&lt;!&ndash;   your app branding color for the app bar &ndash;&gt;-->
